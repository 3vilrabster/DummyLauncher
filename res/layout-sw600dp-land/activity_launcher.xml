<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#CC0000" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="#CC0000"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="Welcome to Android"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#F0F0F0"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#335599"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:onClick="onGoogle"
                    android:text="Search on Google"
                    android:textColor="#F0F0F0"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF8800"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Common Apps"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#F0F0F0"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp" >

                    <ImageButton
                        android:id="@+id/bPhone"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:onClick="onPhone"
                        android:src="@drawable/ic_launcher_phone" />

                    <ImageButton
                        android:id="@+id/bContacts"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:onClick="onContacts"
                        android:src="@drawable/ic_launcher_contacts" />

                    <ImageButton
                        android:id="@+id/bBrowser"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:onClick="onBrowser" />

                    <ImageButton
                        android:id="@+id/bCalendar"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:onClick="onCalendar" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF8800"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Google Apps"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#F0F0F0"
                    android:textSize="30sp" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/bGmail"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:onClick="onMail" />

                        <ImageButton
                            android:id="@+id/bKeep"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:onClick="onKeep" />

                        <ImageButton
                            android:id="@+id/bMaps"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:onClick="onMaps" />

                        <ImageButton
                            android:id="@+id/bDrive"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:onClick="onDrive"
                            android:src="@drawable/ic_launcher_drive" />

                        <ImageButton
                            android:id="@+id/bCurrents"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:onClick="onCurrents" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#FF8800"
                android:orientation="vertical" >
                
                <Button
                    android:id="@+id/bPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:onClick="onApps"
                    android:text="All your Apps"
                    android:textColor="#F0F0F0"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>